<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="bedroom_copy_action" model="ir.actions.act_window">
        <field name="name">Booking Hotel Sud</field>
        <field name="res_model">bedroom.copy</field>
        <field name="view_mode">tree,form,calendar</field>
    </record>

    <menuitem name="My Hotel Sud" id="hotel_sud_base_menu"/>
    <menuitem name="Booking" id="bedroom_sud_menu" parent="hotel_sud_base_menu" action="bedroom_action"/>

    <record id="bedroom_sud_view_form" model="ir.ui.view">
        <field name="name">Bedroom Form</field>
        <field name="model">bedroom.copy</field>
        <field name="arch" type="xml">
        <form>
            <group>
                <group>
                    <field name="number_room"/>
                    <field name="number_person"/>
                    <field name="contact_id" />
                </group>
                <group>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </group>
                <group>
                    <field name="cost_price"/>
                    <field name="nights_price"/>
                </group>
            </group>
            <group>
                <field name="note"/>
            </group>
        </form>
        </field>
    </record>
    <record id="bedroom_sud_view_tree" model="ir.ui.view">
        <field name="name">Bedroom List </field>
        <field name="model">bedroom.copy</field>
        <field name="arch" type="xml">
            <tree>
                <field name="number_room"/>
                <field name="number_person"/>
                <field name="contact_id" />
                <field name="note"/>
                <field name="cost_price"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="booking_sud_calendar_view">
        <field name="name">Booking Calendar</field>
        <field name="model">bedroom.copy</field>
        <field name="arch" type="xml">
            <calendar string="Booking Calendar" date_start="date_start" date_stop="date_end">
                <field name="number_room"/>
                <field name="contact_id"/>
            </calendar>
        </field>
    </record>
    <record id="bedroom_sud_view_search" model="ir.ui.view">
        <field name="name">Bedroom Search</field>
        <field name="model">bedroom.copy</field>
        <field name="arch" type="xml">
            <search>
                <field name="number_room"/>
                <field name="contact_id" />
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="contact_id"/>
            </search>
        </field>
    </record>
</odoo>